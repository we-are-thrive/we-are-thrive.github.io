---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
    <main class="min-h-screen flex items-center justify-center bg-gradient-to-b from-gray-50 to-gray-100 px-4">
        <div class="text-center">
            <h1 class="text-9xl font-bold text-gray-900 animate-bounce-slow">404</h1>
            <p class="mt-4 text-2xl text-gray-600 mb-8">Oops! Looks like you've ventured into unknown territory.</p>
            <a href="/" class="inline-block px-6 py-3 text-lg font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors duration-200 transform hover:scale-105">
                Take Me Home
            </a>
        </div>
    </main>
</Layout>

<style>
    @keyframes bounce-slow {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-25px);
        }
    }

    .animate-bounce-slow {
        animation: bounce-slow 3s infinite;
    }

    main {
        perspective: 1000px;
    }

    h1 {
        text-shadow: 4px 4px 0px rgba(0,0,0,0.1);
    }
</style>