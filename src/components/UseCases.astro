---
const useCases = [
    {
        name: 'Use Case 1',
        description: 'We solve use case 1.' 
    },
    {
        name: 'Use Case 2',
        description: 'We solve use case 2.'
    }
]
---

<div class="flex flex-col gap-4">
    {useCases.map((useCase) => (
        <div class="flex flex-col gap-2">
            <h3 class="text-2xl font-bold">{useCase.name}</h3>
            <p class="text-sm text-gray-500">{useCase.description}</p>
        </div>
    ))}
</div>