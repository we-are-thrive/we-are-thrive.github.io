---
const pipeline = [
    {
        name: 'Discovery',
        description: 'We solve discovery.'
    },
    {
        name: 'Design',
        description: 'We solve design.'
    },
    {
        name: 'Development',
        description: 'We solve development.'
    },
    {
        name: 'Deployment',
        description: 'We solve deployment.'
    }
]
---

<div class="flex flex-col gap-4">
    {pipeline.map((step) => (
        <div class="flex flex-col gap-2">
            <h3 class="text-2xl font-bold">{step.name}</h3>
            <p class="text-sm text-gray-500">{step.description}</p>
        </div>
    ))}
</div>