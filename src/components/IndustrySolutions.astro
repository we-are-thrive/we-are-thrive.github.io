---
import { Building2, Briefcase, ShoppingBag, PiggyBank, Activity, Microscope } from 'lucide-react';

const industries = [
  {
    name: 'Healthcare',
    description: 'Enhance patient care with predictive analytics and automated diagnostics.',
    potential: 'Reduce diagnostic time by up to 60% and improve accuracy by 40%',
    Icon: Activity,
    image: 'assets/images/healthcare.jpg',
    size: 'large' // can be 'large' or 'small'
  },
  {
    name: 'Finance',
    description: 'Automate risk assessment and detect fraud in real-time.',
    potential: 'Identify suspicious transactions with 99.9% accuracy',
    Icon: PiggyBank,
    image: 'assets/images/credit-card.jpg',
    size: 'small'
  },
  {
    name: 'Manufacturing',
    description: 'Optimize production lines and predict maintenance needs.',
    potential: 'Reduce downtime by up to 45% with predictive maintenance',
    Icon: Building2,
    image: 'assets/images/manufacturing.jpg',
    size: 'small'
  },
  {
    name: 'Retail',
    description: 'Personalize customer experiences and optimize inventory.',
    potential: 'Increase customer engagement by 35%',
    Icon: ShoppingBag,
    image: 'assets/images/retail.jpg',
    size: 'large'
  },
  {
    name: 'Research',
    description: 'Accelerate discoveries with advanced data analysis.',
    potential: 'Speed up research cycles by 50%',
    Icon: Microscope,
    image: 'assets/images/research.jpg',
    size: 'small'
  },
  {
    name: 'Professional Services',
    description: 'Streamline operations and enhance decision-making.',
    potential: 'Improve operational efficiency by 40%',
    Icon: Briefcase,
    image: 'assets/images/professional-services.jpg',
    size: 'small'
  }
];
---

<section class="industry-solutions">
  <div class="container">
    <header class="section-header">
      <h2>Transform Any Industry</h2>
      <p class="section-intro">See how our AI solutions can revolutionize your sector</p>
    </header>

    <div class="bento-grid">
      {industries.map(({ name, description, potential, Icon, image, size }) => (
        <div class={`bento-item ${size}`}>
          <div class="bento-content">
            <div class="bento-preview" style={`background-image: url(${image})`}>
              <div class="overlay">
                <div class="icon-wrapper">
                  <Icon size={32} strokeWidth={1.5} />
                </div>
                <h3>{name}</h3>
              </div>
            </div>
            <div class="bento-details">
              <div class="details-content">
                <h3>{name}</h3>
                <p>{description}</p>
                <div class="potential">
                  <span class="potential-label">Potential Impact:</span>
                  <span class="potential-value">{potential}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .industry-solutions {
    padding: var(--section-padding);
    background: #080b14;
    position: relative;
    overflow: hidden;
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-auto-rows: 250px;
    gap: 1.5rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .bento-item {
    border-radius: 1.5rem;
    overflow: hidden;
    position: relative;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .bento-item.large {
    grid-column: span 2;
    grid-row: span 2;
  }

  .bento-item.small {
    grid-column: span 1;
    grid-row: span 1;
  }

  .bento-content {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .bento-preview {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    transition: transform 0.5s ease;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8),
      rgba(0, 0, 0, 0.2)
    );
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1.5rem;
    color: white;
  }

  .bento-details {
    position: absolute;
    inset: 0;
    background: rgba(8, 11, 20, 0.95);
    padding: 1.5rem;
    opacity: 0;
    transform: translateY(5%);
    transition: all 0.3s ease;
    pointer-events: none;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    backdrop-filter: blur(8px);
  }

  .bento-item:hover .bento-details {
    opacity: 1;
    transform: translateY(0);
    pointer-events: all;
  }

  .bento-item:hover .bento-preview {
    transform: scale(1.1);
  }

  .icon-wrapper {
    background: var(--color-primary);
    width: 44px;
    height: 44px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  h3 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    margin: 0;
  }

  .details-content {
    color: white;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .details-content h3 {
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .details-content p {
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .potential {
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .potential-label {
    display: block;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 0.5rem;
  }

  .potential-value {
    color: var(--color-accent);
    font-weight: 500;
    font-size: 1rem;
    line-height: 1.4;
  }

  @media (max-width: 1200px) {
    .bento-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-auto-rows: 280px;
    }

    .bento-item.large {
      grid-row: span 1;
    }
  }

  @media (max-width: 480px) {
    .bento-grid {
      grid-template-columns: 1fr;
    }

    .bento-item.large {
      grid-column: span 1;
      grid-row: span 1;
    }
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    color: white;
  }

  .section-header h2 {
    color: white;
    font-size: var(--font-size-3xl);
    margin-bottom: 1rem;
  }

  .section-header .section-intro {
    color: rgba(255, 255, 255, 0.8);
    font-size: var(--font-size-lg);
    max-width: 600px;
    margin: 0 auto;
  }
</style> 