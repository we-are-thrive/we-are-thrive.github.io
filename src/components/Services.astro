    {
        name: 'AI/ML Solutions',
        description: 'We build AI/ML solutions that are fast, secure, and scalable.'
    },
    {
        name: 'LLM Solutions',
        description: 'We build LLM solutions that are fast, secure, and scalable.'
    },
    {
        name: 'Data Science',
        description: 'We build data science solutions that are fast, secure, and scalable.'
    },
    {
        name: 'Data Engineering',
