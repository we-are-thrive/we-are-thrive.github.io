---
import Anthropic from '/public/logos/partners/anthropic.svg';
import AWS from '/public/logos/partners/aws.svg';

interface Technology {
    name: string;
    icon: ImageMetadata;
    description?: string;
}

const technologies: Technology[] = [
    {
        name: 'Anthropic',
        icon: Anthropic
    },
    {
        name: 'AWS',
        icon: AWS
    }
];


---

<div class="flex flex-wrap justify-center gap-4">
    {technologies.map((technology) => (
        <div class="flex flex-col items-center">
            <technology.icon size={80} class:list={['fill-primaryText-light', 'dark:fill-primaryText-dark']}/>
        </div>
    ))}
</div>