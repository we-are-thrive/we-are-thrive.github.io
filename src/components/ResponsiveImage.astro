import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  className?: string;
}

const { src, alt, className = '' } = Astro.props;

<div class={`relative overflow-hidden ${className}`}>
  <Image 
    src={src} 
    alt={alt} 
    width={800} 
    height={600} 
    class="w-full h-auto object-cover"
    loading="lazy"
  />
</div> 